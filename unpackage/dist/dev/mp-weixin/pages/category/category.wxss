.categoryContainer {
  height: 100%;
}
.categoryContainer .header {
  height: 80rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  border-bottom: 1rpx solid #ff69b4;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.categoryContainer .header .search {
  background-color: #aaa;
  width: 90%;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #f00;
}
.categoryContainer .main {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.categoryContainer .main .left {
  width: 150rpx;
}
.categoryContainer .main .left .item {
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
}
.categoryContainer .main .left .item.active {
  background-color: #87ceeb;
  border-bottom: 1px solid #ff69b4;
}
.categoryContainer .main .right {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
      -ms-flex: 1;
          flex: 1;
  border-left: 1rpx solid #ff69b4;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.categoryContainer .main .right .rightScroll {
  height: calc(100vh - 80rpx);
}
.categoryContainer .main .right .rightScroll .titleImg {
  display: block;
  width: 520rpx;
  height: 190rpx;
  margin: 20rpx auto;
}
.categoryContainer .main .right .rightScroll .subCateList {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-wrap: wrap;
      -ms-flex-wrap: wrap;
          flex-wrap: wrap;
}
.categoryContainer .main .right .rightScroll .subCateList .subCate {
  width: 33.333333%;
  text-align: center;
}
.categoryContainer .main .right .rightScroll .subCateList .subCate .subCateImg {
  width: 100%;
  height: 144rpx;
}
.categoryContainer .main .right .rightScroll .subCateList .subCate .subCateName {
  font-size: 28rpx;
  line-height: 50rpx;
}

